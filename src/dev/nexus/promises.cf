# PROMISES
#

body common control
{
  inputs => {
              "inputs.cf",
              "setup.cf",
              "$(inputs:components.daemons[nexus])",
            };
  bundlesequence  => { "main" };
}

bundle agent main
{
  methods:
      "run" usebundle => setup:run;
}

bundle common knowledge
{
  vars:
      "dependencies" slist => {
                                "nexus",
                              }, meta => { "dependencies" };
}

